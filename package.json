{
    "devDependencies": {
      "concurrently": "^8.2.2",
      "tailwindcss": "^3.4.4"
    },
  
    "browserslist": {
      "production": [
        ">0.2%",
        "not dead",
        "not op_mini all"
      ],
      "development": [
        "last 1 chrome version",
        "last 1 firefox version",
        "last 1 safari version"
      ]
    },
  
    "scripts": {
      "build": "hs fetch --overwrite 'Sablona' ./",
      "start": "concurrently \"npx tailwindcss -i ./Sablona/Assets/css/input.css -o ./Sablona/Assets/css/theme.css --watch\" \"hs watch 'Sablona' 'Sablona'\""
    }
  }
  